    <div id="search-bar-container">
        {{ component('card_search') }}
    </div>
    <script>
    console.log("Valeur de la recherche:", document.querySelector('[data-model="query"]').value);
        import { Controller } from 'stimulus';

        export default class extends Controller {
            static targets = ['input'];

            connect() {
                this.inputTarget.addEventListener('input', () => this.onSearch());
            }

            onSearch() {
                const query = this.inputTarget.value;

                this.element.querySelector('[data-model="query"]').value = query;

                this.element.requestUpdate();
            }
        }

    </script>
